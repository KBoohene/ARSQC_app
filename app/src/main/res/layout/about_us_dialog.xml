<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@color/background_material_dark"
    app:layout_collapseMode="parallax">

    <TextView
        android:paddingTop="20dp"
        android:paddingBottom="5dp"
        android:text="@string/about_surfacemap"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/about_us"
        android:textSize="30sp"
        android:layout_gravity="center"
        />

    <View
        android:layout_width="393dp"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_weight="0.00" />

    <TextView
        android:text="SurfaceMap is an application which allows users to collect road surface quality data and view data collected in the past. This application is in it's beta stage, thus please excuse any bugs that might come with the application."
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:id="@+id/about_us_text"
        android:textSize="20sp"
        android:gravity="center"
        tools:ignore="HardcodedText"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="25dp"
        />
</LinearLayout>