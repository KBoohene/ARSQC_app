<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/testX"
        android:text="@string/data_vis"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/end_recording"
        android:layout_alignLeft="@+id/end_recording"
        android:layout_alignStart="@+id/end_recording" />

    <TextView
        android:text="@string/status"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:id="@+id/noticeView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/start_stop_toggle"
        android:layout_alignStart="@+id/start_stop_toggle"
        android:layout_marginTop="30dp" />

    <ToggleButton
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:textOn="@string/pause_recording"
        android:textOff="@string/start_recording"
        android:id="@+id/start_stop_toggle"
        android:onClick="startStopToggleClicked"
        android:checked="false"
        android:layout_below="@+id/noticeView"
        android:layout_alignLeft="@+id/end_recording"
        android:layout_alignStart="@+id/end_recording" />

    <Button
            android:text="@string/end_recording"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:id="@+id/end_recording"
            android:onClick="endButtonClicked"
            style="@style/Widget.AppCompat.Button"
        android:layout_below="@+id/start_stop_toggle"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/post_files"
        android:layout_height="wrap_content"
        android:background="@drawable/red_button_sld"
        android:onClick="testButton"
        android:id="@+id/upload"
        android:textColor="@color/white"
        android:layout_marginTop="47dp"
        android:layout_width="248dp"
        android:layout_below="@+id/testX"
        android:layout_alignLeft="@+id/testX"
        android:layout_alignStart="@+id/testX" />


</RelativeLayout>